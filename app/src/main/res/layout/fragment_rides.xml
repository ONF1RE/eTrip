<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_40mdp"
    tools:context=".fragment.RidesFragment"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/carpooler"
        android:layout_width="@dimen/_150mdp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/_10mdp"
        android:layout_margin="@dimen/_30mdp"
        app:cardElevation="@dimen/_5mdp"
        android:clickable="true"
        android:elevation="@dimen/_5mdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/icon1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55mdp"
                android:layout_marginStart="@dimen/_10mdp"
                android:layout_marginTop="@dimen/_10mdp"
                android:layout_marginEnd="@dimen/_10mdp"
                android:layout_marginBottom="@dimen/_5mdp"
                android:src="@drawable/passenger_24"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon1"
                android:layout_marginStart="@dimen/_5mdp"
                android:layout_marginEnd="@dimen/_5mdp"
                android:layout_marginBottom="@dimen/_10mdp"
                android:gravity="center"
                android:text="Be A Passenger"
                android:textStyle="bold"
                android:textSize="@dimen/_15font_mdp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/driver"
        android:layout_width="@dimen/_150mdp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/_10mdp"
        android:layout_margin="@dimen/_30mdp"
        app:cardElevation="@dimen/_5mdp"
        android:clickable="true"
        android:elevation="@dimen/_5mdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/icon2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55mdp"
                android:layout_marginStart="@dimen/_10mdp"
                android:layout_marginTop="@dimen/_10mdp"
                android:layout_marginEnd="@dimen/_10mdp"
                android:layout_marginBottom="@dimen/_5mdp"
                android:src="@drawable/driver_24"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon2"
                android:layout_marginStart="@dimen/_5mdp"
                android:layout_marginEnd="@dimen/_5mdp"
                android:layout_marginBottom="@dimen/_10mdp"
                android:gravity="center"
                android:text="Be A Driver"
                android:textStyle="bold"
                android:textSize="@dimen/_15font_mdp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/activity"
        android:layout_width="@dimen/_150mdp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/_10mdp"
        android:layout_margin="@dimen/_30mdp"
        app:cardElevation="@dimen/_5mdp"
        android:clickable="true"
        android:elevation="@dimen/_5mdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/icon3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55mdp"
                android:layout_marginStart="@dimen/_10mdp"
                android:layout_marginTop="@dimen/_10mdp"
                android:layout_marginEnd="@dimen/_10mdp"
                android:layout_marginBottom="@dimen/_5mdp"
                android:src="@drawable/recent_24"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon3"
                android:layout_marginStart="@dimen/_5mdp"
                android:layout_marginEnd="@dimen/_5mdp"
                android:layout_marginBottom="@dimen/_10mdp"
                android:gravity="center"
                android:text="Recent Activity"
                android:textStyle="bold"
                android:textSize="@dimen/_15font_mdp" />

        </RelativeLayout>
        
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>