<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/lavender_background"
    tools:context=".fragment.EditProfileFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/lavender_border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textSize="36sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/lavender">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/textUsername"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="20dp"
                android:text="Username"
                android:textSize="@dimen/_14font_mdp"
                android:padding="11dp"
                android:drawableLeft="@drawable/username_24"
                android:drawablePadding="8dp"
                android:textColor="@color/black"
                android:clickable="true"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/edit_name"
                android:layout_marginTop="20dp"
                android:hint="Name"
                android:background="@drawable/lavender_border"
                android:padding="10dp"
                android:drawableLeft="@drawable/profile_24"
                android:drawablePadding="8dp"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/edit_email"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="20dp"
                android:hint="Email"
                android:padding="10dp"
                android:drawableLeft="@drawable/email_24"
                android:drawablePadding="8dp"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/edit_pswd"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="20dp"
                android:hint="Password"
                android:padding="10dp"
                android:drawableLeft="@drawable/password_24"
                android:drawablePadding="8dp"
                android:textColor="@color/black"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Submit"
                android:id="@+id/submit_button"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                app:cornerRadius="20dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>